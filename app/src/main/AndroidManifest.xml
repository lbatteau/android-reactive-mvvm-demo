<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lukasbatteau.sake17"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lukasbatteau.sake17.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.lukasbatteau.sake17.SignupActivity"
            android:label="@string/title_activity_signup">
        </activity>
        <activity
            android:name="com.lukasbatteau.sake17.RxSignupActivity"
            android:label="@string/title_activity_rx_signup">
        </activity>
    </application>

</manifest>
